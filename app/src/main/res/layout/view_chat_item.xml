<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3.75dp"
    android:layout_marginLeft="16.3dp"
    android:layout_marginRight="19.2dp"
    android:layout_marginTop="3.75dp"
    >

    <!--Left content-->
    <LinearLayout
        android:id="@+id/item_messenger_chat_ll_item_content_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/item_messenger_chat_ll_item_img_left"
            android:layout_width="37.4dp"
            android:layout_height="37.4dp"
            android:layout_marginRight="9.6dp"
            android:src="@drawable/ic_profile"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/item_messenger_chat_ll_item_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_left_read"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <TextView
                    android:id="@+id/item_messenger_chat_tv_msg_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="hello right"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/item_messenger_chat_tv_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3 minutes ago"
                android:textColor="#9ea8b2"
                android:textSize="9.6sp"
                android:textStyle="italic"
                />
        </LinearLayout>

    </LinearLayout>

    <!--Right content-->
    <LinearLayout
        android:id="@+id/item_messenger_chat_ll_item_content_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/item_messenger_chat_ll_item_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_right_read"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/item_messenger_chat_tv_msg_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="hello left"
                    android:textSize="14sp"
                    android:textStyle="italic"/>

            </LinearLayout>

            <TextView
                android:id="@+id/item_messenger_chat_tv_time_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3 minutes ago"
                android:textColor="#9ea8b2"
                android:textSize="9.6sp"
                android:textStyle="italic"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
